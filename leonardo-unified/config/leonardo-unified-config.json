    "cluster_mode": false,
    "max_connections": 10000,
    "timeout": 30000,
    "keep_alive": true,
    "compression": true
  },

  "frontend_ports": {
    "main_dashboard": 3000,
    "quantum_dashboard": 3001,
    "trading_console": 3002,
    "system_monitor": 3003

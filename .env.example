# QBTC-UNIFIED Environment Configuration
# =====================================
# IMPORTANTE: No uses valores reales en este archivo
# Copia este archivo a .env y configura con tus credenciales reales

# APIs de Trading (Reemplazar con credenciales reales)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# APIs de LLM para MetaConsciencia
OPENROUTER_API_KEY=your_openrouter_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Configuración del Sistema
NODE_ENV=development
LOG_LEVEL=info
DEBUG_MODE=true

# Puertos de Servicios (modificar si hay conflictos)
METACONSCIENCIA_PORT=3001
LEONARDO_PORT=3003
GUARDIAN_PORT=14601
PORTFOLIO_PORT=14801
METRICS_PORT=14701
QUANTUM_ENGINE_PORT=14105
RISK_MANAGER_PORT=14501
TRADING_SYSTEM_PORT=14201
ADMIN_SERVER_PORT=8888

# Configuración de Seguridad (GENERAR VALORES ÚNICOS)
SECURITY_KEY=generate_your_own_secure_key_here
JWT_SECRET=your_jwt_secret_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here
SALT_ROUNDS=12

# Configuración de Base de Datos (si aplica)
DATABASE_URL=your_database_connection_string
REDIS_URL=redis://localhost:6379

# Configuración de Métricas y Monitoreo
PROMETHEUS_ENABLED=true
GRAFANA_URL=http://localhost:3000
METRICS_RETENTION_DAYS=30

# Configuración de Alertas
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_email_app_password

# Configuración de Riesgo (Valores en USD)
MAX_TOTAL_EXPOSURE=100000
MAX_DAILY_LOSS=8000
MAX_SINGLE_POSITION=10000
EMERGENCY_STOP_LOSS=0.08
MAX_LEVERAGE=10

# Configuración de Portfolio
INITIAL_CAPITAL=100000
REBALANCE_THRESHOLD=0.05
VAR_CONFIDENCE=0.95
KELLY_FRACTION=0.25

# Configuración de PM2
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=500M
PM2_LOG_LEVEL=info

# Features Opcionales
ENABLE_BACKTESTING=false
ENABLE_PAPER_TRADING=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEB_DASHBOARD=true

# Desarrollo y Debug
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
